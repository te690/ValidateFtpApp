@model ValidateFtpApp.Models.FtpServerDetails
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h5>Validate Client PPK</h5>
@if (TempData["errorMSG"] != null)
{
    @TempData["errorMSG"].ToString()
}

<form asp-controller="ValidateFtp" asp-action="ClentIndex" id="frmValidatePPK">
    <!-- 2 column grid layout with text inputs for the first and last names -->
    <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
                <input type="text" asp-for="Host" class="form-control" />
                <label class="form-label" for="form6Example1">Host</label>
            </div>
        </div>
        <div class="col">
            <div class="form-outline">
                <input type="text" asp-for="Port" class="form-control" />
                <label class="form-label" for="form6Example2">Port</label>
            </div>
        </div>
    </div>

    <!-- Text input -->
    <div class="row form-outline mb-4">
        <div class="col">
            <div class="form-outline">
                <input type="text" asp-for="UserName" class="form-control" />
                <label class="form-label" for="form6Example3">User Name</label>
            </div>
        </div>
        <div class="col">
            <div class="form-outline">
                <input type="text" id="form6Example4" asp-for="Password" class="form-control" />
                <label class="form-label" for="form6Example4">Password</label>
            </div>
        </div>
    </div>
    <div class="row mb-12" style="text-align:center;">
        <button type="submit" class="btn btn-primary">Validate</button>
    </div>
    <!-- Submit button -->
</form>
